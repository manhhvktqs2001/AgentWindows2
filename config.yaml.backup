agent:
    id: cb5c1eb3-2bc8-469f-b02f-12cdfcaff1ef
    name: edr-agent-windows
    heartbeat_interval: 60
    event_batch_size: 100
    max_queue_size: 10000
    max_memory_usage: ""
server:
    url: http://192.168.20.85:5000
    api_key: oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo
    auth_token: edr_system_auth_2025
    websocket_enabled: false
    timeout: 30
    retry_count: 3
    tls_verify: false
yara:
    enabled: true
    auto_update: false
    update_interval: 24h
    rules_source: https://github.com/Yara-Rules/rules/archive/master.zip
    categories:
        - antidebug_antivm
        - capabilities
        - crypto
        - exploit_kits
        - maldocs
        - malware
        - packers
        - webshells
    max_scan_threads: 4
    scan_timeout: 30
    rules_path: yara-rules
    max_file_size: 100MB
monitoring:
    file_system:
        enabled: true
        paths:
            - C:\Users
            - C:\Program Files
            - C:\Program Files (x86)
            - C:\Windows\System32
        exclude_extensions:
            - .tmp
            - .log
            - .bak
        real_time_scan: true
        recursive: true
        max_file_size: 100MB
    processes:
        enabled: true
        scan_executables: true
        monitor_injections: true
        track_network_connections: true
        monitor_cmdline: true
        exclude_names:
            - explorer.exe
            - dwm.exe
            - winlogon.exe
    network:
        enabled: true
        monitor_dns: true
        block_malicious_ips: false
        capture_packets: false
        monitor_tcp: true
        monitor_udp: false
        scan_interval: 30
        exclude_ports:
            - 135
            - 445
            - 5985
        suspicious_ports:
            - 22
            - 23
            - 3389
            - 5900
            - 8080
            - 4444
            - 1337
    registry:
        enabled: true
        monitor_autostart: true
        track_security_settings: true
        scan_interval: 30
        paths:
            - HKLM\SOFTWARE\Microsoft\Windows\CurrentVersion\Run
            - HKLM\SOFTWARE\Microsoft\Windows\CurrentVersion\RunOnce
            - HKCU\SOFTWARE\Microsoft\Windows\CurrentVersion\Run
    memory:
        enabled: true
        scan_interval: 300
        threat_threshold: 0.5
        max_processes: 50
        scan_private: true
        scan_executable: true
        scan_writable: true
    behavior:
        enabled: true
        analysis_interval: 60
        threat_threshold: 0.6
        data_retention: 24
        max_child_processes: 10
        max_file_operations: 50
        max_network_connections: 20
        max_registry_access: 30
        max_memory_operations: 15
        max_file_access: 100
        max_file_modifications: 20
        max_bytes_sent: 10485760
        max_bytes_received: 10485760
response:
    notification_settings:
        toast_enabled: true
        system_tray_enabled: true
        desktop_alert_enabled: true
        sound_enabled: true
        timeout_seconds: 10
    severity_thresholds:
        show_user_alerts: 3
        auto_quarantine: 4
        block_execution: 5
    user_interaction:
        allow_user_override: true
        require_admin_for_allow: true
        timeout_seconds: 30
    customization:
        company_branding: false
        custom_messages: false
        language: en
logging:
    level: info
    format: text
    file_path: agent.log
    max_size: 10MB
    compress: false
    max_size_mb: 0
